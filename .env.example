# BrokerWiz Bot Automation Server - Environment Configuration

# === General ===
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# === API ===
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-secure-api-key-here-change-in-prod

# === Redis ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# === Workers & Queues ===
NUM_WORKERS=3
WORKER_TIMEOUT=300
QUEUE_NAME=default

# === App Web Integration ===
APP_WEB_BASE_URL=http://localhost:3000
APP_WEB_API_KEY=app-web-bearer-token-here
APP_WEB_UPLOAD_TIMEOUT=30

# === PDF Upload Retry ===
PDF_UPLOAD_MAX_RETRIES=3
PDF_UPLOAD_INITIAL_WAIT=2
PDF_UPLOAD_BACKOFF_FACTOR=2

# === Selenium ===
SELENIUM_HEADLESS=True
SELENIUM_WINDOW_SIZE=1920,1080
SELENIUM_TIMEOUT=15
SELENIUM_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# === Storage (Screenshots/Debug) ===
STORAGE_PATH=./storage
STORAGE_SCREENSHOTS=True
STORAGE_MAX_AGE_DAYS=7

# === Monitoring ===
ENABLE_METRICS=True
PROMETHEUS_PORT=8001
METRICS_UPDATE_INTERVAL=5

# === Logging ===
LOG_FORMAT=json
LOG_FILE=logs/broker_wiz.log
LOG_FILE_MAX_MB=100
LOG_FILE_BACKUP_COUNT=10

# === Security ===
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE
CORS_ALLOW_HEADERS=*

# === Feature Flags ===
FEATURE_WEBHOOK_NOTIFICATIONS=False
FEATURE_PERSISTENT_JOBS=False
FEATURE_ADMIN_UI=True
