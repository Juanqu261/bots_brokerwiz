# BrokerWiz Bot Automation Server - Environment Configuration

# === General ===
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# === API ===
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your-secure-api-key-here-change-in-prod

# === MQTT (Message Queue) ===
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=broker-wiz-api
MQTT_QOS=1
MQTT_TOPIC_PREFIX=bots
MQTT_CLEAN_SESSION=True
MQTT_KEEPALIVE=60

# === Workers & Queues ===
NUM_WORKERS=3
WORKER_TIMEOUT=300
WORKER_POLL_INTERVAL=1

# === App Web ===
APP_WEB_BASE_URL=http://localhost:3000
APP_WEB_API_KEY=app-web-bearer-token-here
APP_WEB_UPLOAD_TIMEOUT=30

# === Selenium ===
SELENIUM_HEADLESS=True
SELENIUM_WINDOW_SIZE=1920,1080
SELENIUM_TIMEOUT=15
SELENIUM_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# === Storage (Screenshots/Debug) ===
STORAGE_PATH=./storage
STORAGE_SCREENSHOTS=True
STORAGE_MAX_AGE_DAYS=7

# === Security ===
CORS_ORIGINS=http://localhost:3000,https://orquestadorbots.brokerwiz.co,https://brokerwiz.co
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=GET,POST
CORS_ALLOW_HEADERS=Authorization,Content-Type
